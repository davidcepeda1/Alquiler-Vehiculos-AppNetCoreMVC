<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0">
    <link rel="stylesheet" href="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/font.css">
    <link rel="stylesheet" href="~/css/SingUp.css" asp-append-version="true">
</head>

<div id="containerSingUp">


    <div class="main" id="main">



        <input type="checkbox" id="chk">
        <div class="signup">
            <label for="chk" class="sig">Registrarse</label>
            <div class="form-row">
                <div class="user-box">
                    <input type="text" title="Enter name" id="name" required autocomplete="off">
                    <label id="nameLabel">Nombre</label>
                    <img src="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/logo.svg" alt="Logo" class="logo-img" id="nameIcon">
                </div>

                <div class="user-box">
                    <input type="text" title="Enter last name" id="lastName" required autocomplete="off">
                    <label id="nameLabel">Apellido</label>
                    <img src="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/logo.svg" alt="Logo" class="logo-img" id="lastNameIcon">
                </div>
            </div>

            <div class="form-row">
                <div class="user-box">
                    <input type="text" title="Enter Username" id="username" required autocomplete="off">
                    <label id="usernameLabel">Nombre de Usuario</label>
                    <img src="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/logo.svg" alt="Logo" class="logo-img" id="userIcon">
                </div>

                <div class="user-box">
                    <input type="text" title="Enter telephone" id="telephone" required autocomplete="off">
                    <label id="telephoneLabel">Teléfono</label>
                    <img src="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/logo.svg" alt="Logo" class="logo-img" id="telephoneIcon">
                </div>
            </div>

            <div class="form-row">
                <div class="user-box">
                    <input type="text" title="Enter email" id="email" required autocomplete="off">
                    <label id="emailLabel">Email</label>
                    <img src="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/logo.svg" alt="Logo" class="logo-img" id="emailIcon">
                </div>

                <div class="user-box">
                    <input type="password" title="Enter password" id="password" required autocomplete="off">
                    <label id="passwordLabel">Contraseña</label>
                    <img src="https://raw.githubusercontent.com/Ahmed-Massoud/Login-and-sign-up-form/main/logo.svg" alt="Logo" class="logo-img" id="passIcon">
                </div>
            </div>


            <button onclick="check()" id="button" class="btnLogIn">Sign up</button>

        </div>

        <div class="login">

            <label for="chk" class="log">Login</label>



            <div class="user-box">

                <input type="text" title="Enter Username" id="username2" required>

                <label>Username</label>

            </div>

            <div class="user-box">

                <input type="password" title="Enter password" id="password2" required>

                <label>Password</label>

            </div>
            <button onclick="login()" id="button2" class="btnLogIn">Login</button>

        </div>

    </div>

</div>


<script src="~/js/singup.js"></script>