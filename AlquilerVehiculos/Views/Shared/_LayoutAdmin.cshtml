<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.Title</title>
    <link href="~/css/AdminStyle.css" rel="stylesheet" />
</head>
<body>
    <!-- Barra de navegación lateral -->
    <aside class="sidebar">
        <nav class="navbar">
            <ul>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Contenido principal -->
    <main class="main-content">
        <header class="header">
            <h1>Bienvenido, Administrador</h1>
        </header>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Administración</p>
    </footer>
</body>
</html>